<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.contabilibili.ui.controller.ProcessoViewController">
   <children>
      <Label layoutX="24.0" layoutY="24.0" text="Cadastro de Processos">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="tabelaProcessos" layoutX="24.0" layoutY="65.0" prefHeight="280.0" prefWidth="730.0">
        <columns>
          <TableColumn fx:id="colunaId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colunaNumero" prefWidth="150.0" text="Número" />
           <TableColumn fx:id="colunaCartorio" prefWidth="265.0" text="Cartório" />
           <TableColumn fx:id="colunaInteressado" prefWidth="265.0" text="Interessado" />
        </columns>
      </TableView>
      <Label layoutX="24.0" layoutY="370.0" text="Número do Processo:" />
      <TextField fx:id="campoNumero" layoutX="24.0" layoutY="390.0" prefWidth="250.0" />
       <Label layoutX="300.0" layoutY="370.0" text="Cartório:" />
       <ComboBox fx:id="comboCartorio" layoutX="300.0" layoutY="390.0" prefWidth="220.0" />
       <Label layoutX="534.0" layoutY="370.0" text="Interessado (Pessoa):" />
       <ComboBox fx:id="comboInteressado" layoutX="534.0" layoutY="390.0" prefWidth="220.0" />
      <HBox alignment="CENTER_RIGHT" layoutX="24.0" layoutY="440.0" prefWidth="730.0" spacing="10.0">
         <children>
             <Button onAction="#onVoltarClick" style="-fx-base: #f0ad4e;" text="Voltar" />
            <Button onAction="#onNovoClick" text="Novo" />
            <Button fx:id="btnExcluir" onAction="#onExcluirClick" text="Excluir" />
            <Button onAction="#onSalvarClick" text="Salvar" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
      <Label fx:id="labelId" layoutX="24.0" layoutY="480.0" text="ID:" visible="false" />
   </children>
</AnchorPane>