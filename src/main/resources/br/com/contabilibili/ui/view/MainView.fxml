<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.contabilibili.ui.controller.MainViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastros">
            <items>
              <MenuItem fx:id="menuCartorios" mnemonicParsing="false" onAction="#abrirTelaCartorios" text="Cartórios" />
              <MenuItem fx:id="menuPessoas" mnemonicParsing="false" onAction="#abrirTelaPessoas" text="Pessoas" />
              <MenuItem fx:id="menuProcessos" mnemonicParsing="false" onAction="#abrirTelaProcessos" text="Processos" />
              <MenuItem fx:id="menuLancamentos" mnemonicParsing="false" onAction="#abrirTelaLancamentos" text="Lançamentos Financeiros" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Sistema">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#fecharAplicacao" text="Sair" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>